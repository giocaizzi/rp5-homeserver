# Ollama Stack Environment Variables
# Copy this file to .env and update with your actual values

# Ollama Configuration
OLLAMA_DATA_PATH=./data/ollama
OLLAMA_LOGS_PATH=./logs/ollama

# Resource Limits (optimized for Raspberry Pi 5 8GB)
OLLAMA_MEMORY_LIMIT=3G        # Reduced from 4G for Pi efficiency
OLLAMA_CPU_LIMIT=3.0          # Can use 3 cores (Pi5 has 4 cores)
OLLAMA_MEMORY_RESERVATION=1G  # Reduced from 2G for other services
OLLAMA_CPU_RESERVATION=1.0

# User Configuration
PUID=1000
PGID=1000
TZ=UTC