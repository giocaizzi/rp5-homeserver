# Infrastructure Stack Environment Variables
# Copy this file to .env and update with your actual values

# Required
# ---------------------------
# Cloudflare Tunnel Configuration
CLOUDFLARED_TOKEN=your-cloudflare-tunnel-token-here

# Nginx Configuration
NGINX_CONF_PATH=./nginx/nginx.conf
NGINX_SSL_PATH=./nginx/ssl

# Optional
# ---------------------------
# Nginx Configuration
NGINX_LOGS_PATH=./logs/nginx

# Portainer Configuration  
PORTAINER_DATA_PATH=./data/portainer

# User Configuration
PUID=1000
PGID=1000
TZ=UTC