# Infrastructure Stack Environment Variables
# Copy this file to .env and update with your actual values

# Required
# ---------------------------
# Cloudflare Tunnel Configuration
CLOUDFLARED_TOKEN=your-cloudflare-tunnel-token-here

# Nginx Configuration
NGINX_CONF_PATH=./nginx/nginx.conf
NGINX_SSL_PATH=./nginx/ssl

# Backrest Backup Configuration
GCP_SERVICE_ACCOUNT_FILE=./backup/secrets/gcp_service_account.json
BACKREST_ADMIN_USERNAME=admin
BACKREST_ADMIN_PASSWORD=secure_backrest_password_here
USER_HOME=/home/username

# Optional
# ---------------------------
# Homepage Configuration
HOMEPAGE_CONFIG_PATH=./homepage
HOMEPAGE_DOMAIN=your-domain.com

# Portainer API Integration
PORTAINER_API_KEY=ptr_your_api_key_here

# Firefly III API Integration
# Generate from Firefly III: Profile → OAuth → "Create New Personal Access Client"
FIREFLY_API_TOKEN=your_firefly_personal_access_token_here

# AdGuard Home Integration
# Set after completing AdGuard initial setup
HOMEPAGE_VAR_ADGUARD_USERNAME=admin
HOMEPAGE_VAR_ADGUARD_PASSWORD=your_adguard_password_here

# Weather Widget Configuration (optional - defaults to Rome, Italy)
HOMEPAGE_LATITUDE=41.9028
HOMEPAGE_LONGITUDE=12.4964
HOMEPAGE_TIMEZONE=Europe/Rome

# User Configuration
PUID=1000
PGID=1000
TZ=UTC